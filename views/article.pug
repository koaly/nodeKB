extends layout

block content
    h1= article.title
    h5 เขียนโดย #{article.author}
    p= article.body
    br
    .form-row
        .form-group.col-md-4
            label Gold Medal:
            p= article.goldMedal
        .form-group.col-md-4
            label Silver Medal:
            p= article.silverMedal
        .form-group.col-md-4
            label Bronze Medal:
            p= article.bronzeMedal
    hr
    if user
        if user.id ==article.authorID
            a.btn.btn-default(href="/articles/edit/"+article._id) Edit
            a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete